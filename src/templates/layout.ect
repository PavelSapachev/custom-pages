<html lang="<%= @lang %>">
	<head>
		<title><%= @codeStr %> â€“ <%= @message %></title>

		<meta charset="utf-8" />
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

		<style type="text/css">
			html, body {
				background-image: url('data:image/png;base64, <%= @encodedBg %>');

				font-family: 'Trebuchet MS', 'Helvetica CY', 'DejaVu Sans', sans-serif;
				font-size: 1.2em;

				height: 100%;
				margin: 0;
				padding: 0;
			}
				#outer-container {
					background: #F6F6F6; /* For old browsers */
					background: -webkit-linear-gradient(rgba(220, 220, 220, 0.97), rgba(255, 255, 255, 0.98), rgba(220, 220, 220, 0.97)); /* For Safari */
					background: -o-linear-gradient(rgba(220, 220, 220, 0.97), rgba(255, 255, 255, 0.98), rgba(220, 220, 220, 0.97)); /* For Opera 11.1 to 12.0 */
					background: -moz-linear-gradient(rgba(220, 220, 220, 0.97), rgba(255, 255, 255, 0.98), rgba(220, 220, 220, 0.97)); /* For Firefox 3.6 to 15 */
					background: linear-gradient(rgba(220, 220, 220, 0.99), rgba(255, 255, 255, 0.9), rgba(220, 220, 220, 0.99)); /* Standard syntax */
					display: table;
					height: auto !important;
					min-height: 100%;
					width: 100%;
				}
					#inner-container {
						display: table-cell;
						text-align: center;
						vertical-align: middle;
					}
						#error {
							display: inline-block;
							text-align: left;
						}
							#header {
								display: inline-block;
								width: auto !important;
							}
								#header span {
									display: inline-block;
									padding: 0.5em;
									color: #FFFFFF;
								}
									#header span.code {
										background-color: rgba(142, 21, 21, 0.8);
										font-size: 1.4em;
										font-weight: bold;
									}
									#header span.text {
										background-color: rgba(255, 16, 0, 0.6);
										font-style: italic;
									}
							#body {
								padding-left: 1.5em;
							}
								#description {
									color: #FFFFFF;
								}
									#description div span {
										display: inline-block;
										padding: 0.5em;
									}
										#description div.header span {
											background-color: rgba(137, 137, 137, 0.8);
											font-size: 0.9em;
											font-weight: bold;
											margin-left: 1em;
											margin-top: 0.5em;
											padding: 0.3em 0.5em;
										}
										#description div.list span {
											background-color: rgba(137, 137, 137, 0.6);
											font-size: 0.8em;
											padding-right: 0.9em;
										}
										#description div.text span {
											background-color: rgba(137, 137, 137, 0.6);
											font-size: 0.8em;
											margin-top: 0.5em;
											width: 30em;
										}
									#description div.list ul {
										list-style-type: square;
										margin: 0;
										padding-left: 1.3em;
									}
					#footer {
						position: absolute;
						bottom: 0.5em;
						right: 0.5em;
					}
						#extLink {
							font-size: 0.5em;
							color: #898989;
						}
		</style>
	<head>

	<body>
		<div id="outer-container">
			<div id="inner-container">
				<div id="error">
					<div id="header">
						<span class="code"><%= @codeStr %></span><span class="text"><%= @message %></span>
					</div>
					<div id="body">
						<div id="description">
							<% if @list != undefined : %>
								<div class="header">
									<span><%= @descrHeader %></span>
								</div>
								<div class="list">
									<span>
										<ul>
											<% for row in @list : %>
												<li><%- row %></li>
											<% end %>
										</ul>
									</span>
								</div>
							<% else : %>
								<div class="text">
									<span><%= @text %></span>
								</div>
							<% end %>
						</div>
					</div>
				</div>
			<div>

			<div id="footer">
				<a id="extLink" href="http://sapachev.com/custom-pages/" target="_blank">Custom pages of HTTP response</a>
			</div>
		</div>
	</body>

</html>